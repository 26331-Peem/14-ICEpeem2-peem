import tkinter as tk
from tkinter import messagebox

CALORIES_PER_MINUTE = 10

# ===== COLORS =====
BG_COLOR = "#E3F2FD"
CARD_COLOR = "#FFFFFF"
PRIMARY = "#2196F3"
SUCCESS = "#4CAF50"
WARNING = "#FF9800"
DANGER = "#F44336"
TEXT = "#333333"

def calculate():
    try:
        name = name_entry.get()
        running_minutes = float(run_entry.get())
        calorie_intake = float(food_entry.get())

        if running_minutes < 0 or calorie_intake < 0:
            messagebox.showerror("Error", "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà‡∏Ñ‡πà‡∏≤‡∏ó‡∏µ‡πà‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏ó‡πà‡∏≤‡∏Å‡∏±‡∏ö 0")
            return

        burned = running_minutes * CALORIES_PER_MINUTE
        net = calorie_intake - burned

        result_text = (
            f"üìä ‡∏™‡∏£‡∏∏‡∏õ‡∏ú‡∏•\n\n"
            f"üë§ ‡∏ä‡∏∑‡πà‡∏≠: {name}\n"
            f"‚è±Ô∏è ‡∏ß‡∏¥‡πà‡∏á: {running_minutes:.1f} ‡∏ô‡∏≤‡∏ó‡∏µ\n"
            f"üî• ‡πÄ‡∏ú‡∏≤‡∏ú‡∏•‡∏≤‡∏ç: {burned:.1f} ‡πÅ‡∏Ñ‡∏•‡∏≠‡∏£‡∏µ‡πà\n"
            f"üçî ‡∏£‡∏±‡∏ö‡πÄ‡∏Ç‡πâ‡∏≤: {calorie_intake:.1f} ‡πÅ‡∏Ñ‡∏•‡∏≠‡∏£‡∏µ‡πà\n"
            f"‚öñÔ∏è ‡∏™‡∏∏‡∏ó‡∏ò‡∏¥: {net:.1f} ‡πÅ‡∏Ñ‡∏•‡∏≠‡∏£‡∏µ‡πà\n\n"
        )

        if net > 0:
            result_text += "üìà ‡∏ß‡∏±‡∏ô‡∏ô‡∏µ‡πâ‡∏û‡∏•‡∏±‡∏á‡∏á‡∏≤‡∏ô‡πÄ‡∏Å‡∏¥‡∏ô‡∏ô‡∏¥‡∏î‡∏´‡∏ô‡πà‡∏≠‡∏¢"
            result_label.config(fg=WARNING)
        elif net < 0:
            result_text += "üìâ ‡πÄ‡∏¢‡∏µ‡πà‡∏¢‡∏°‡∏°‡∏≤‡∏Å! ‡πÄ‡∏ú‡∏≤‡∏ú‡∏•‡∏≤‡∏ç‡πÑ‡∏î‡πâ‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤‡∏ó‡∏µ‡πà‡∏Å‡∏¥‡∏ô"
            result_label.config(fg=SUCCESS)
        else:
            result_text += "‚úÖ ‡∏™‡∏°‡∏î‡∏∏‡∏•‡∏û‡∏≠‡∏î‡∏µ‡πÄ‡∏õ‡πä‡∏∞!"
            result_label.config(fg=PRIMARY)

        result_label.config(text=result_text)

    except ValueError:
        messagebox.showerror("Error", "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô")

# ===== WINDOW =====
root = tk.Tk()
root.title("üèÉ Fitness & Calorie Tracker")
root.geometry("440x520")
root.configure(bg=BG_COLOR)

# ===== CARD =====
card = tk.Frame(root, bg=CARD_COLOR)
card.place(relx=0.5, rely=0.5, anchor="center", width=380, height=470)

# ===== TITLE =====
tk.Label(
    card,
    text="üèÉ Fitness & Calorie Tracker",
    font=("Arial", 16, "bold"),
    bg=CARD_COLOR,
    fg=PRIMARY
).pack(pady=15)

# ===== INPUTS =====
def label(text):
    return tk.Label(card, text=text, bg=CARD_COLOR, fg=TEXT, font=("Arial", 11))

label("‡∏ä‡∏∑‡πà‡∏≠‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì").pack(anchor="w", padx=20)
name_entry = tk.Entry(card, font=("Arial", 11))
name_entry.pack(fill="x", padx=20, pady=5)

label("‡∏£‡∏∞‡∏¢‡∏∞‡πÄ‡∏ß‡∏•‡∏≤‡∏Å‡∏≤‡∏£‡∏ß‡∏¥‡πà‡∏á (‡∏ô‡∏≤‡∏ó‡∏µ)").pack(anchor="w", padx=20)
run_entry = tk.Entry(card, font=("Arial", 11))
run_entry.pack(fill="x", padx=20, pady=5)

label("‡πÅ‡∏Ñ‡∏•‡∏≠‡∏£‡∏µ‡πà‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö‡∏à‡∏≤‡∏Å‡∏≠‡∏≤‡∏´‡∏≤‡∏£").pack(anchor="w", padx=20)
food_entry = tk.Entry(card, font=("Arial", 11))
food_entry.pack(fill="x", padx=20, pady=5)

# ===== BUTTON =====
tk.Button(
    card,
    text="‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡πÅ‡∏Ñ‡∏•‡∏≠‡∏£‡∏µ‡πà",
    command=calculate,
    bg=PRIMARY,
    fg="white",
    activebackground="#1976D2",
    font=("Arial", 12, "bold"),
    bd=0,
    height=2
).pack(fill="x", padx=20, pady=15)

# ===== RESULT =====
result_label = tk.Label(
    card,
    text="",
    bg=CARD_COLOR,
    fg=TEXT,
    font=("Arial", 11),
    justify="left",
    wraplength=330
)
result_label.pack(padx=20, pady=10)

root.mainloop()
